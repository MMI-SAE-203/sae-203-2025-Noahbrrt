---
export interface Props {
    id: string;
    titre: string;
    imageUrl: string;
    type: string;
    description: string;
    invite: string;
}

const { id, titre, imageUrl, type, description, invite } = Astro.props;
---

<a href={`/activites/${id}`} class="block">
    <div class="w-[250px] bg-white p-3 rounded-lg shadow-lg text-center mx-auto cursor-pointer">
        <img src={imageUrl} alt={`Illustration de ${titre}`} class="max-w-full h-[150px] object-cover mx-auto rounded-lg" />
  
        <div class="mt-3">
            <p class="text-cyan-500 font-semibold">{type}</p>
  
            <p class="text-sm text-gray-700 mt-1">
                {description.slice(0, 60)}...
            </p>
  
            <p class="text-sm text-gray-700 mt-1">
              <strong class="text-black">Invité :</strong> {invite || "Non spécifié"}
            </p>
        </div>
    </div>
  </a>
  